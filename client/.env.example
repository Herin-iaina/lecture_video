# Configuration du client video (borne)
# Copiez ce fichier en .env et adaptez les valeurs

# === Port Serie ===
SERIAL_PORT=/dev/ttyUSB0
BAUDRATE=9600

# === Videos ===
VIDEO_ROOT=/opt/video_player/videos
GENERIC_VIDEO_NAME=generic.mp4

# === API Serveur ===
API_URL=http://server-ip:8000
API_TIMEOUT=5.0

# === Identification de la borne ===
MACHINE_NAME=borne_01
MACHINE_DESCRIPTION=Borne principale entree
MACHINE_LOCATION=Hall d'accueil

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=/var/log/video_player/player.log

# === Anti-spam ===
MIN_INTERVAL=5
